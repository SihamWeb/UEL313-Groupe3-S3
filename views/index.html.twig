{% extends "layout.html.twig" %}

{% block title %}Home{% endblock %}

{% block content %}
	<div class="row">
		{% for link in links %}
			<div class="col-md-4">
			    <h2><a class="linkTitle" href="{{ path('link', { 'id': link.id }) }}">{{ link.title }}</a></h2>
			    <p>{{ link.desc }}</p>
			    <a href="{{ link.url }}" title="" target="_blank">Open ></a>
			    <em>(by {{ link.user.username }})</em>

			    {% for tag in link.tags %}
			    	<a href="{{ path('tag', { 'id': tag.id }) }}" title="Filtrer">
			    		{{ tag.title }}
			    	</a>
			    {% endfor %}
			</div>
		{% endfor %}
	</div>
	<!-- Pagination links -->
	<div>
		<span>Pages :</span>
		{% for page in 1..totalPagesLinks %}
			{% if page == currentPageLinks %}
				<span>{{ page }}</span>
			{% else %}
				<a href="{{ path('home', {'pageLinks': page}) }}">{{ page }}</a>
			{% endif %}
		{% endfor %}
	</div>
{% endblock %}
