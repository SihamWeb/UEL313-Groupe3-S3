{% extends "layout.html.twig" %}

{% block title %}{{ link.title }}{% endblock %}

{% block content %}
<p>
    <h2>{{ link.title }}</h2>
    <p>{{ link.desc }}</p>
    <br><br>
    <a class="btn btn-primary" href="{{ link.url }}" title="" target="_blank">Open ></a>
<br><br>
    {% for tag in link.tags %}
    	<a href="{{ path('tag', { 'id': tag.id }) }}" class="btn btn-outline-primary" title="Filtrer">
    		{{ tag.title }}
    	</a>
    {% endfor %}
    <p><em>(by {{ link.user.username }})</em></p>
</p>
{% endblock %}
